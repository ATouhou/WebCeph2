{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "lib",
    "jsx": "react",
    "strict": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  }
}